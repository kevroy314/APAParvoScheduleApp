<controls:ChildWindow x:Class="APAParvoScheduleApp.Notifier"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="98" 
           Title="Notifier" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <TextBlock Height="24" HorizontalAlignment="Left" Name="textBlock" Text="TextBlock" VerticalAlignment="Top" Width="378" TextWrapping="Wrap" />
    </Grid>
</controls:ChildWindow>